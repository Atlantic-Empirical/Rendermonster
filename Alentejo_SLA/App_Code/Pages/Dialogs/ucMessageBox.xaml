<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	x:Class="SMT.Alentejo_SLA.ucMessageBox"
	Width="320" Height="150">
	<Canvas x:Name="LayoutRoot" Background="#FF8C8C8C">
		<Border BorderBrush="#FF001470" BorderThickness="4,4,4,4" CornerRadius="3,3,3,3" Width="320" Height="150" />
		<Button Height="23" Width="60" Canvas.Left="252" Canvas.Top="120" Content="OK" x:Name="btn1"/>
		<Button Height="23" Width="60" Content="Cancel" Canvas.Left="188" Canvas.Top="120" x:Name="btn2"/>
		<Button Height="23" Width="60" Content="Cancel" x:Name="btn2_Copy" Canvas.Left="124" Canvas.Top="120"/>
		<TextBlock Height="19.333" Width="308" Canvas.Left="6.667" Canvas.Top="3.999" Text="[Title]" TextWrapping="Wrap" x:Name="txtHeader" Foreground="#FFFFFFFF" FontSize="14" FontWeight="Bold" FontFamily="Portable User Interface"/>
		<TextBlock Height="92" Width="306" Canvas.Left="6.667" Canvas.Top="24" Text="[Text]" TextWrapping="Wrap" Foreground="#FFFFFFFF" x:Name="txtMessage"/>
	</Canvas>
</UserControl>